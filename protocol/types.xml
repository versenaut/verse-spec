   <structitem name="geometry">
    <structtype>
     <structitem name="layer_r" type="string16"/>
     <structitem name="layer_g" type="string16"/>
     <structitem name="layer_b" type="string16"/>
    </structtype>
   </structitem>
   <structitem name="texture">
    <structtype>
     <structitem name="bitmap" type="VNodeID"/>
     <structitem name="layer_r" type="string16"/>
     <structitem name="layer_g" type="string16"/>
     <structitem name="layer_b" type="string16"/>
